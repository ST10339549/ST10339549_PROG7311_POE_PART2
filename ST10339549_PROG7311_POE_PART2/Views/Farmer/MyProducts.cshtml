@model IEnumerable<ST10339549_PROG7311_POE_PART2.Models.Product>
@{
    ViewData["Title"] = "My Products";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-seedling text-success me-2"></i> My Products</h2>
        <a asp-action="AddProduct" class="btn btn-success">
            <i class="fas fa-plus-circle me-2"></i> Add New Product
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i> You haven't added any products yet. Use the "Add Product" button to get started.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-success">
                            <tr>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Description</th>
                                <th>Qty</th>
                                <th>Price</th>
                                <th>Production Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td><i class="fas fa-leaf me-1 text-secondary"></i> @product.ProductName</td>
                                    <td><span class="badge bg-success rounded-pill">@product.ProductCategory</span></td>
                                    <td>@product.Description</td>
                                    <td>@product.Quantity</td>
                                    <td>R @product.UnitPrice.ToString("F2")</td>
                                    <td><i class="fas fa-calendar-alt me-1 text-secondary"></i> @product.ProductionDate.ToShortDateString()</td>
                                    <td>
                                        <a asp-action="EditProduct" asp-route-id="@product.ProductId" class="btn btn-sm btn-outline-primary me-1">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="DeleteProduct" asp-route-id="@product.ProductId" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

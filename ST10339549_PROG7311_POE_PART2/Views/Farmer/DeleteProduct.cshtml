@model ST10339549_PROG7311_POE_PART2.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2 class="text-danger mb-4">Are you sure you want to delete this product?</h2>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.ProductName</h5>
            <p class="card-text">
                <strong>Category:</strong> @Model.ProductCategory<br />
                <strong>Description:</strong> @Model.Description<br />
                <strong>Quantity:</strong> @Model.Quantity<br />
                <strong>Price:</strong> R @Model.UnitPrice.ToString("F2")<br />
                <strong>Production Date:</strong> @Model.ProductionDate.ToShortDateString()
            </p>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="DeleteProduct" method="post">
            <input type="hidden" asp-for="ProductId" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="MyProducts" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@model ST10339549_PROG7311_POE_PART2.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2 class="mb-4">Edit Product</h2>
    <form asp-action="EditProduct" method="post">
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="FarmerId" />
        <input type="hidden" asp-for="CreatedAt" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="ProductName" class="form-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="ProductCategory" class="form-label"></label>
                <input asp-for="ProductCategory" class="form-control" />
                <span asp-validation-for="ProductCategory" class="text-danger"></span>
            </div>

            <div class="col-md-12 mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" type="number" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="UnitPrice" class="form-label"></label>
                <input asp-for="UnitPrice" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="ProductionDate" class="form-label"></label>
                <input asp-for="ProductionDate" type="date" class="form-control" />
                <span asp-validation-for="ProductionDate" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
        <a asp-action="MyProducts" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@model ST10339549_PROG7311_POE_PART2.Models.Farmer
@{
    ViewData["Title"] = "Add Farmer";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <h2 class="mb-4">Register a New Farmer</h2>
    <form asp-action="AddFarmer" method="post">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="FarmerName" class="form-label"></label>
                <input asp-for="FarmerName" class="form-control">
                <span asp-validation-for="FarmerName" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="FarmerEmail" class="form-label"></label>
                <input asp-for="FarmerEmail" type="email" class="form-control">
                <span asp-validation-for="FarmerEmail" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="FarmerPhoneNumber" class="form-label"></label>
                <input asp-for="FarmerPhoneNumber" class="form-control">
                <span asp-validation-for="FarmerPhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="FarmerAddress" class="form-label"></label>
                <input asp-for="FarmerAddress" class="form-control">
                <span asp-validation-for="FarmerAddress" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="FarmerPasswordHash" class="form-label">Password</label>
                <input asp-for="FarmerPasswordHash" class="form-control" type="password">
                <span asp-validation-for="FarmerPasswordHash" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Add Farmer</button>
    </form>
</div>

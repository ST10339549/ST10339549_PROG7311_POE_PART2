@model ST10339549_PROG7311_POE_PART2.Models.Farmer
@{
    ViewData["Title"] = "Add Farmer";
}

<div class="container mt-4">
    <div class="card shadow border-success">
        <div class="card-header bg-success text-white">
            <h5><i class="fas fa-user-plus me-2"></i> Register a New Farmer</h5>
        </div>
        <div class="card-body">
            <form asp-action="AddFarmer" method="post">
                <div class="row g-3">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FarmerName" class="form-label"><i class="fas fa-user me-1"></i> Name</label>
                        <input asp-for="FarmerName" class="form-control">
                        <span asp-validation-for="FarmerName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="FarmerEmail" class="form-label"><i class="fas fa-envelope me-1"></i> Email</label>
                        <input asp-for="FarmerEmail" type="email" class="form-control">
                        <span asp-validation-for="FarmerEmail" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="FarmerPhoneNumber" class="form-label"><i class="fas fa-phone me-1"></i> Phone</label>
                        <input asp-for="FarmerPhoneNumber" class="form-control">
                        <span asp-validation-for="FarmerPhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="FarmerAddress" class="form-label"><i class="fas fa-home me-1"></i> Address</label>
                        <input asp-for="FarmerAddress" class="form-control">
                        <span asp-validation-for="FarmerAddress" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="FarmerPasswordHash" class="form-label"><i class="fas fa-key me-1"></i> Password</label>
                        <input asp-for="FarmerPasswordHash" class="form-control" type="password">
                        <span asp-validation-for="FarmerPasswordHash" class="text-danger"></span>
                    </div>
                </div>
                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check-circle me-2"></i> Register Farmer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

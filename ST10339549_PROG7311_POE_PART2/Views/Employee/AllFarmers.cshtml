@model IEnumerable<ST10339549_PROG7311_POE_PART2.Models.Farmer>
@{
    ViewData["Title"] = "All Farmers";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <h2 class="mb-4">All Registered Farmers</h2>
    
    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Registered On</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var farmer in Model)
                {
                    <tr>
                        <td>@farmer.FarmerName</td>
                        <td>@farmer.FarmerEmail</td>
                        <td>@farmer.FarmerPhoneNumber</td>
                        <td>@farmer.FarmerAddress</td>
                        <td>@farmer.CreatedAt.ToShortDateString()</td>
                        <td>
                            <a asp-action="EditFarmer" asp-route-id="@farmer.FarmerId" class="btn btn-sm btn-outline-primary">Edit</a>
                            <a asp-action="DeleteFarmer" asp-route-id="@farmer.FarmerId" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            No farmers have been registered yet.
        </div>
    }

    <div class="mt-3">
        <a asp-action="AddFarmer" class="btn btn-primary">Add New Farmer</a>
    </div>
</div>

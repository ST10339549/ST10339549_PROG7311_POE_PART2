@model ST10339549_PROG7311_POE_PART2.Models.Farmer
@{
    ViewData["Title"] = "Delete Farmer";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <h2 class="text-danger">Are you sure you want to delete this farmer?</h2>
    <div class="card mt-3">
        <div class="card-body">
            <h5 class="card-title">@Model.FarmerName</h5>
            <p class="card-text">
                <strong>Email:</strong> @Model.FarmerEmail<br />
                <strong>Phone:</strong> @Model.FarmerPhoneNumber<br />
                <strong>Address:</strong> @Model.FarmerAddress<br />
                <strong>Registered On:</strong> @Model.CreatedAt.ToShortDateString()
            </p>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="DeleteFarmer" method="post">
            <input type="hidden" name="id" value="@Model.FarmerId" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="AllFarmers" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

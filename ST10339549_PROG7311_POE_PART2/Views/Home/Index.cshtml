@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <div class="row align-items-center">
        <div class="col-md-6 mb-4 mb-md-0">
            <h1 class="display-4 fw-bold text-success">Welcome to Agri-Energy Connect</h1>
            <p class="lead">Connecting farmers and sustainable energy solutions for a greener tomorrow.</p>
            <p>Our platform helps farmers manage their renewable energy products and connects them with potential buyers.</p>
            
            @if (!User.Identity.IsAuthenticated)
            {
                <div class="mt-4">
                    <a href="/Account/Login" class="btn btn-success btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i> Get Started
                    </a>
                </div>
            }
        </div>
        <div class="col-md-6 text-center">
            <div class="p-4 bg-light rounded shadow-sm">
                <i class="fas fa-leaf text-success" style="font-size: 6rem;"></i>
                <div class="mt-3">
                    <h3>Sustainable Agriculture</h3>
                    <p>Join our community of eco-friendly farmers working towards a sustainable future.</p>
                </div>
            </div>
        </div>
    </div>
</div>
